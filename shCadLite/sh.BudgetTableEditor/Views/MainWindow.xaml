           ShowNonClientArea="True"
           WindowStartupLocation="CenterScreen"
           Background="{DynamicResource RegionBrush}"
           Style="{StaticResource WindowWin10}"
           d:DesignHeight="800" 
           d:DesignWidth="1200" 
           Icon="/sh.BudgetTableEditor;component/Resources/Img/money.ico">
