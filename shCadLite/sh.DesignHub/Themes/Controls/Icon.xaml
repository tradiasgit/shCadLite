<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:sh.DesignHub">
    <Style TargetType="{x:Type local:Icon}">
        <Setter Property="FontFamily" Value="/sh.DesignHub;component/Resources/#Font Awesome 5 Free Solid"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Icon}">
                    <TextBlock x:Name="icon"
                        Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}"   
                        TextAlignment="Center"
                        FontFamily="{TemplateBinding FontFamily}" FontSize="{TemplateBinding FontSize}"  Text="{Binding Text}"
                    />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>