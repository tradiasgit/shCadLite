<Window x:Class="sh.Creator.Views.SingleSelectBox.WD_RenameBlock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sh.Creator.Views.SingleSelectBox"
        mc:Ignorable="d" x:Name="root"
        Title="{Binding ElementName=root ,Path=Title}" Height="100" Width="300">
    <Grid>
        <TextBox Grid.Row="2" Grid.Column="1" Height="30" Margin="10,0,60,0" Text="{Binding ElementName=root,Path=Text}"></TextBox>
        <Button Grid.Column="1" Grid.Row="3" Width="50" Height="30" HorizontalAlignment="Right" Margin="0,0,10,0" Click="Button_Click">OK</Button>
    </Grid>
</Window>
